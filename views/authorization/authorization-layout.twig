{% extends './../layouts/master.twig' %}
{% block extraHeaders %}
  <link rel="prefetch" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
{% endblock %}
{% block extraStyles %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}
{% block bodyClasses %}d-flex align-items-center py-4 bg-body-tertiary justify-content-center vh-100{% endblock %}

{% block mainContent %}
  <main>
    <div class="card p-3 shadow">
      <div class="card-body">
        <div class="header">
          <div class="logo"></div>
          <h1 class="heading text-center">Welcome</h1>
          <p class="message text-center text-wrap">
            {% block headerMessage %}{% endblock %}
          </p>
        </div>
        {% block authorizationContent %}{% endblock %}
      </div>
    </div>
  </main>
{% endblock %}
